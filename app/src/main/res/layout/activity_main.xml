<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_tittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="PIZZA ORDER" />

        <RelativeLayout
            android:id="@+id/relative_satu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_tittle">

            <EditText
                android:id="@+id/edit_text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Isikan Nama Anda" />

            <ImageButton
                android:id="@+id/img_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/edit_text_name"
                android:src="@drawable/ic_close_black_24dp" />

            <Button
                android:id="@+id/button_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img_close"
                android:text="Submit" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_enam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relative_satu">

            <RelativeLayout
                android:id="@+id/relative_dua"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/cb_satu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pizza Satu" />

                <RadioGroup
                    android:id="@+id/rg_satu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cb_satu"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_s"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S" />

                    <RadioButton
                        android:id="@+id/rb_m"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="M" />

                    <RadioButton
                        android:id="@+id/rb_l"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="L" />

                </RadioGroup>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative_tiga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relative_dua">

                <CheckBox
                    android:id="@+id/cb_dua"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pizza Dua" />

                <RadioGroup
                    android:id="@+id/rg_dua"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cb_dua"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_ss"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S" />

                    <RadioButton
                        android:id="@+id/rb_mm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="M" />

                    <RadioButton
                        android:id="@+id/rb_ll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="L" />
                </RadioGroup>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative_empat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relative_tiga">

                <CheckBox
                    android:id="@+id/cb_tiga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pizza Tiga" />

                <RadioGroup
                    android:id="@+id/rg_tiga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cb_tiga"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_sss"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S" />

                    <RadioButton
                        android:id="@+id/rb_mmm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="M" />

                    <RadioButton
                        android:id="@+id/rb_lll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="L" />
                </RadioGroup>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_lima"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/relative_enam">

            <Switch
                android:id="@+id/switch_upsize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UPSIZE" />
        </RelativeLayout>

        <Button
            android:id="@+id/button_kirik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/relative_lima"
            android:text="Kirim" />
    </RelativeLayout>
</ScrollView>
